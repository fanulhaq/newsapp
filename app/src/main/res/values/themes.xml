<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:statusBarColor">@color/transparent</item>
        <item name="android:windowLightStatusBar" tools:ignore="NewApi">true</item>
    </style>

    <style name="roundedImageView" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopLeft">@dimen/_10dp</item>
        <item name="cornerSizeTopRight">@dimen/_10dp</item>
        <item name="cornerSizeBottomRight">@dimen/_10dp</item>
        <item name="cornerSizeBottomLeft">@dimen/_10dp</item>
    </style>

    <style name="TabLayoutTextAppearanceCategory" parent="TextAppearance.Design.Tab">
        <item name="fontFamily">@font/dm_sans_medium</item>
        <item name="android:textSize">@dimen/_14sp</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="BottomSheetDialogStyle" parent="Theme.MaterialComponents.Light.BottomSheetDialog">
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowSoftInputMode">adjustResize|stateVisible</item>
        <item name="bottomSheetStyle">@style/BottomSheetRoundedStyle</item>
    </style>

    <style name="BottomSheetRoundedStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/bg_bottom_sheet</item>
    </style>
</resources>